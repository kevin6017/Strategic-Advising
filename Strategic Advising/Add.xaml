<Page x:Class="Strategic_Advising.Add"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Strategic_Advising"
      mc:Ignorable="d" 
      d:DesignHeight="725" d:DesignWidth="1200"
      Title="Add">

    <Grid Background="White">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <TextBlock Grid.Row="0" Text="Add Classes" FontSize="24" FontWeight="Bold" HorizontalAlignment="Center"/>
        <TextBlock Grid.Row="1" Text="Course Number: " FontSize="18" HorizontalAlignment="Left" Margin="60,25,0,0"/>
        <TextBox HorizontalAlignment="Left" Height="23" Margin="199,25,0,0" Grid.Row="1" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="120"/>
        <TextBlock Grid.Row="2" Text="Course Title: " FontSize="18" HorizontalAlignment="Left" Margin="60,2,0,32"/>
        <TextBox HorizontalAlignment="Left" Height="23" Margin="199,3,0,0" Grid.Row="2" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="120"/>
        <TextBlock Grid.Row="2" Text="Credit Hours: " FontSize="18" HorizontalAlignment="Left" Margin="60,28,0,6"/>
        <TextBox HorizontalAlignment="Left" Height="23" Margin="199,30,0,-19" Grid.Row="2" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="120"/>
        <CheckBox Content="Fall" FlowDirection="RightToLeft" HorizontalAlignment="Left" FontSize="18" Margin="60,58,0,0" Grid.Row="2" VerticalAlignment="Top" Width="154" Grid.RowSpan="4">
            <CheckBox.Resources>
                <Style TargetType="{x:Type Path}">
                    <Setter Property="FlowDirection" Value="LeftToRight"/>
                </Style>
            </CheckBox.Resources>
        </CheckBox>
        <CheckBox Content="Spring" FlowDirection="RightToLeft" HorizontalAlignment="Left" FontSize="18" Margin="60,12,0,0" Grid.Row="5" VerticalAlignment="Top" Width="154">
            <CheckBox.Resources>
                <Style TargetType="{x:Type Path}">
                    <Setter Property="FlowDirection" Value="LeftToRight"/>
                </Style>
            </CheckBox.Resources>
        </CheckBox>
        <TextBlock Grid.Row="2" Text="Prerequisites: " FontSize="18" HorizontalAlignment="Left" Margin="60,105,0,-71"/>
        <TextBox HorizontalAlignment="Left" Height="23" Margin="199,105,0,-64" Grid.Row="2" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <Button Content="Back" Margin="0,0,30,30" Grid.Row="5" HorizontalAlignment="Right" VerticalAlignment="Bottom" Height="30" Width="80" Click="Button_Click"/>
    </Grid>
</Page>
