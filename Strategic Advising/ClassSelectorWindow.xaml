<Window x:Class="Strategic_Advising.ClassSelectorWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Strategic_Advising"
        mc:Ignorable="d"
        Title="ClassSelectorWindow" Height="450" Width="800"
        >
    <Grid>
        <ListBox HorizontalAlignment="Left" Height="100" Margin="10,155,0,0" VerticalAlignment="Top" Width="120" Name="majorSelect">
            <ListBoxItem Content="Computer Science" Name="CSclasses" Tag="3" IsSelected="True"/>
            <ListBoxItem Content="Mathematics" Name="MathClasses" Tag="2"/>
            <ListBoxItem Content="University Core" Name="UniversityCoreClasses" Tag="0"/>
            <ListBoxItem Content="Honors Core" Name="HonorsCoreClasses" Tag="1"/>
        </ListBox>
        <WindowsFormsHost HorizontalAlignment="Left" VerticalAlignment="Top" Margin="200,20,0,0" Name="sampleGrid"/>
        <Button Content="Show List" HorizontalAlignment="Left" Margin="10,272,0,0" VerticalAlignment="Top" Width="75" Click="Button_Click"/>
    </Grid>
</Window>
