<Window x:Class="Strategic_Advising.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Strategic_Advising"
        mc:Ignorable="d"
        Title="Strategic Advising" Height="540" Width="960">
    <Grid>
        <TextBlock Text="Welcome to Strategic Advising" FontSize="24" HorizontalAlignment="Center"></TextBlock>
        <TextBlock Text="Select a major: " FontSize="18" Margin="50,50,0,0" ></TextBlock>
        <RadioButton GroupName="majorSelect" IsChecked="True" Content="Computer Science" FontSize="18" Margin="200,50,0,0"></RadioButton>
        <RadioButton GroupName="majorSelect" Content="Mathematics" FontSize="18" Margin="400,50,0,0"></RadioButton>
    </Grid>
</Window>
