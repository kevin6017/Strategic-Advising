<Page x:Class="Strategic_Advising.Startup"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Strategic_Advising"
      mc:Ignorable="d" 
      d:DesignHeight="725" d:DesignWidth="1200"
      Title="Startup">

    <Grid Background="White">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" /> 
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <TextBlock Grid.Row="0" Grid.ColumnSpan="7" Text=" Welcome to Strategic Advising" FontSize="24" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,0,0,0" Width="365"/>
        <TextBlock Grid.Row="1" Grid.Column="1" Text="Select a Major: " FontSize="18" HorizontalAlignment="Right" Margin="0,16,10,9" Width="124"/>
        <RadioButton Grid.Row="1" Grid.Column="2" GroupName="majorSelect" IsChecked="True" Content="Computer Science" FontSize="18" Margin="0,17,0,14" HorizontalAlignment="Left" Width="172"/>
        <RadioButton Grid.Row="1" Grid.Column="3" GroupName="majorSelect" IsChecked="False" Content="Mathematics" FontSize="18" Margin="6,16,10,9" HorizontalAlignment="Left" Width="156"/>
        <TextBlock Grid.Row="1" Grid.Column="4" Text="Honors Core:" FontSize="18" Margin="0,15,10,10" Width="108" HorizontalAlignment="Right"/>
        <CheckBox Grid.Row="1" Grid.Column="5" Margin="0,21,0,12" RenderTransformOrigin="0.5,0.5" HorizontalAlignment="Left" Width="17" FlowDirection="RightToLeft">
            <CheckBox.RenderTransform>
                <TransformGroup>
                    <ScaleTransform ScaleX="-1"/>
                    <SkewTransform/>
                    <RotateTransform/>
                    <TranslateTransform/>
                </TransformGroup>
            </CheckBox.RenderTransform>
        </CheckBox>
        <TextBlock Grid.Row="2" Grid.Column="2" Grid.ColumnSpan="2" Text="  Minimum Credit Hour: " FontSize="18" Margin="0,25,0,23" HorizontalAlignment="Center" Width="222" />
        <TextBlock Grid.Row="3" Grid.Column="2" Grid.ColumnSpan="2" Text="  Maximum Credit Hour: " FontSize="18" Margin="61,26,72,14" HorizontalAlignment="Center" Width="210"/>
        <ComboBox Grid.Row="2" Grid.Column="3" Grid.ColumnSpan="2" Margin="0,25,0,23" HorizontalAlignment="Center" Width="150" Height="30">
            <ComboBoxItem Content="9" HorizontalAlignment="Left" Width="120"/>
            <ComboBoxItem Content="10" HorizontalAlignment="Left" Width="120"/>
            <ComboBoxItem Content="11" HorizontalAlignment="Left" Width="120"/>
            <ComboBoxItem Content="12" HorizontalAlignment="Left" Width="120"/>
            <ComboBoxItem Content="13" HorizontalAlignment="Left" Width="120"/>
            <ComboBoxItem Content="14" HorizontalAlignment="Left" Width="120"/>
            <ComboBoxItem Content="15" HorizontalAlignment="Left" Width="120"/>
        </ComboBox>
        <ComboBox Grid.Row="3" Grid.Column="3" Grid.ColumnSpan="2" Margin="0,26,0,20" HorizontalAlignment="Center" Width="150" Height="30">
            <ComboBoxItem Content="16" HorizontalAlignment="Left" Width="120"/>
            <ComboBoxItem Content="17" HorizontalAlignment="Left" Width="120"/>
            <ComboBoxItem Content="18" HorizontalAlignment="Left" Width="120"/>
            <ComboBoxItem Content="19" HorizontalAlignment="Left" Width="120"/>
            <ComboBoxItem Content="20" HorizontalAlignment="Left" Width="120"/>
            <ComboBoxItem Content="21" HorizontalAlignment="Left" Width="120"/>
        </ComboBox>
        <TextBlock Grid.Row="4" Grid.Column="1" Grid.ColumnSpan="1" Text="Start Semester: " FontSize="18" Margin="0,18,0,62" HorizontalAlignment="Center"/>
        <TextBlock Grid.Row="4" Grid.Column="3" Grid.ColumnSpan="1" Text="End Semester: " FontSize="18" Margin="0,18,0,62" HorizontalAlignment="Center"/>
        <TextBox Grid.Row="4" Grid.Column="2" Grid.ColumnSpan="1" Margin="0,18,0,62" HorizontalAlignment="Center" Width="150" Height="30"/>
        <TextBox Grid.Row="4" Grid.Column="4" Grid.ColumnSpan="1" Margin="0,18,0,62" HorizontalAlignment="Center" Width="150" Height="30"/>
        <TextBlock Grid.Row="5" Grid.Column="2" Grid.ColumnSpan="2" Text="Current Semester: " FontSize="18" Margin="0,10,0,107" HorizontalAlignment="Center"/>
        <TextBox Grid.Row="5" Grid.Column="3" Grid.ColumnSpan="2"  Margin="0,10,0,107" HorizontalAlignment="Center" Width="150" Height="30"/>
        <Button Grid.Row="6" Grid.Column="0" Content="Editor" Click="editorClick" Height="30" VerticalAlignment="Bottom" HorizontalAlignment="Left" Width="80" Margin="30,0,0,30"/>
        <Button Grid.Row="6" Grid.Column="6" Content="Submit" Margin="0,0,30,30" Width="80" HorizontalAlignment="Right" Click="onSubmit" Height="30" VerticalAlignment="Bottom"/>
    </Grid>
</Page>
